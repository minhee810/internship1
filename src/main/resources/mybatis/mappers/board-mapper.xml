<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.BoardMapper">

	<!-- 글 목록 조회 데이터 -->
	<resultMap type="boardVO" id="boardListMap">
		<id column="board_id" property="boardId" />
		<result column="title" property="title" />
		<result column="comment" property="comment" />
		<result column="created_date" property="createdDate" />
		<result column="modified_date" property="modifiedDate" />
		<result column="comment_cnt" property="commentCnt" />

		<collection javaType="UsersVO" property="userVO">
			<id column="user_id" property="userId" />
			<result column="username" property="username" />
		</collection>

	</resultMap>

	<!-- 1대 다 : collection (한명의 유저가 작성한 글 목록) 1대 1 : association 일반 컬럼과 pk 컬럼 
		구분, pk 컬럼에는 result 아닌 id 사용 -->


	<!-- 메인 페이지 글 목록 조회 -->
	<select id="getBoardList" resultType="boardVO">
		<![CDATA[
			SELECT B.BOARD_ID, B.TITLE, B.CREATED_DATE, B.COMMENT_CNT, U.USERNAME
			FROM BOARD B
			INNER JOIN USERS U ON B.WRITER = U.USER_ID 
			WHERE B.IS_DELETED = 0
			ORDER BY CREATED_DATE DESC
		]]>
	</select>
	<!-- 게시판 글 생성 -->
	<insert id="insertBoard" parameterType="boardListDto" useGeneratedKeys="true">
		    
		<![CDATA[
			INSERT INTO BOARD (BOARD_ID, TITLE, CONTENT, COMMENT_CNT, WRITER)
			VALUES (
				board_seq.nextval,
				#{title}, 
				#{content, jdbcType=CLOB}, 
				#{commentCnt},  
				(SELECT USER_ID 
				FROM USERS
				WHERE USER_ID = #{userId}))
		]]>
			<selectKey keyProperty="boardId" resultType="long" order="AFTER">
		        SELECT MAX(BOARD_ID) FROM BOARD
		    </selectKey>

	</insert>
	
	<select id="getDetail" resultType="boardVO">
		<![CDATA[
			SELECT *
			FROM BOARD
			WHERE BOARD_ID = #{boardId}
		]]>
	</select>
	
	
	<update id="modifyBoard" parameterType="boardModifyDto">
		<![CDATA[
			UPDATE BOARD
			SET 
				TITLE = #{title},
				CONTENT = #{content}
			WHERE BOARD_ID = #{boardId}
		]]>
	</update>
	
	<update id="deleteBoard" parameterType="Long">
			UPDATE BOARD  
			SET 
				IS_DELETED = 1 
			WHERE BOARD_ID = #{boardId}
	</update>
	
	

	
</mapper>

