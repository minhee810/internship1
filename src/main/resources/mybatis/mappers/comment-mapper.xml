<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.CommentMapper">

		<!-- 댓글 불러오기 -->
		<select id="getCommentList" parameterType="long" resultType="commentsVO">
			<![CDATA[
				SELECT * FROM COMMENTS WHERE BOARD_ID = #{boardId}
			]]>	
			
		</select>
		<!-- 댓글 작성하기 -->
		<insert id="saveComment" parameterType="commentsVO">
			<![CDATA[
			INSERT INTO COMMENTS
			VALUES (COMMENTS_SEQ.NEXTVAL, #{content}, sysdate, sysdate, #{parentId}, #{depth}, #{isDeleted}, #{orderNumber}, #{writer}, #{boardId})
			]]>
		</insert>
		
		<!-- 댓글 삭제하기 -->
		<update id="deleteComment" parameterType="long">
			<![CDATA[
			]]>
		</update>
		
		<!-- 댓글 수정하기 -->
		<update id="updateComment" parameterType="commentsVO">
			<![CDATA[
			]]>
		
		</update>
		
		
</mapper>